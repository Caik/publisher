{
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": ".",
		"sourceRoot": "src",
		"outDir": "dist",
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es5",
		"lib": [
			"es5",
			"esnext.asynciterable"
		]
	},
	"typeRoots": [
		"node_module/@types"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}